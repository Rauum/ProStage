{% extends 'base.html.twig' %}

{% block titre %}
<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<nav class="navbar navbar-expand-lg navbar-light bg-light navbar-dark bg-dark">

				<div class="col-md-12">
					<h3 class="text-center text-info">
						{{stage.intitule}}
					</h3>
				</div>
			</nav>
		</div>
		{% endblock %}


		{% block text %}
		<div class="col-md-12">
			<h3 class="text-center text-info">
				Entreprise : {{stage.entreprise.nom}}
			</h3>
		</div>
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-6">
					<h2>
						Information de l'entreprise
					</h2>
					<p>
						Adresse : {{stage.entreprise.adresse}}<br>
						Domaine d'activité : {{stage.entreprise.dommaineActivite}}<br>
						Numéro de téléphone : {{stage.entreprise.numTel}}<br>
						SiteWeb: {{stage.entreprise.sitWeb}}
					</p>
				</div>
				<div class="col-md-6">
					<h2>
						Description du stage
					</h2>
					<p>
							{{stage.description}}
					</p>
				</div>
			</div>
		</div>
		{% endblock %}

		{% block boutons %}
		<div class="row">
			<div class="col-md-6">
				<a href="{{path('pro_stage_acceuil')}}">
					<button type="button" class="btn btn-secondary btn-lg btn-block">
						Retour
					</button>
				</a>
			</div>
		</div>
		{% endblock %}
