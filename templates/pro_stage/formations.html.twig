{% extends 'base.html.twig' %}

{% block titrePage %}
    Filtre par formations
{% endblock %}

		{% block tableau %}
		<div class="row">
			<div class="col-md-12">
				<table class="table table-hover table-bordered">
					<thead>
						<tr>
							<th>
								<center>Formations</center>
							</th>
						</tr>
					</thead>
					{% for formationCourante in formations %}
					<tbody>
						<tr class="table-active">
							<td>
								<a href="{{path('pro_stage_afficherStagesParFormations',{intitule:formationCourante.intitule})}}"><center>{{formationCourante.intitule}}</center></a>
							</td>
						</tr>
					</tbody>
					{% endfor %}
				</table>
			</div>
		</div>
		{% endblock %}

		{% block boutons %}
		<div class="row">
			<div class="col-md-6">
				<a href="{{path('pro_stage_acceuil')}}">
					<button type="button" class="btn btn-secondary btn-lg btn-block">
						Retour
					</button>
				</a>
			</div>
		</div>
		{% endblock %}
