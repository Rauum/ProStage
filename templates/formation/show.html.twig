{% extends 'base.html.twig' %}


{% block tableau %}
    <h1>Formation</h1>

    <table class="table table-hover table-bordered border-dark">
        <tbody>
            <tr class="table-active">
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr class="table-active">
                <th>Intitule</th>
                <td>{{ formation.intitule }}</td>
            </tr>
            <tr class="table-active">
                <th>Niveau</th>
                <td>{{ formation.niveau }}</td>
            </tr>
            <tr class="table-active">
                <th>Ville</th>
                <td>{{ formation.ville }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('formation_index') }}">Retour a la liste des formations</a>
    <br>
    <a href="{{ path('formation_edit', {'id': formation.id}) }}">Editer cette formation</a>

    {{ include('formation/_delete_form.html.twig') }}
{% endblock %}
